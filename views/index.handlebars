<div id="no-devour">
    <h1>Undevoured burgers</h1>
    <ul>
        {{#each burgers}} {{#unless this.devour}}
        <li>
            {{this.burger_name}}
                <button class="change-devour" data-id="{{this.id}}" data-devour="1">Devour</button>
  
        </li>
        {{/unless}} {{/each}}
    </ul>
</div>

<div id="yes-devour">
    <h1>Devoured burgers</h1>
    <ul>
        {{#each burgers}} {{#if this.devour}}
        <li>
            {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>


<div id="add-burger">
    <div id="input">
        <form class="create-form">
            <div class="form-group">
                <label for="burgername">Add a Burger:</label>
                <input type="text" id="burgername" name="name">
            <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

