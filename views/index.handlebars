<div id="no-devour">
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.burger_name}}

            <form action="api/burgers/{{this.id}}?_method=PUT">
                <input type="hidden" name="devour" value="true">
                <button type="submit">Devour</button>
            </form>
        </li>
        {{/unless}} {{/each}}
    </ul>
</div>

<div id="yes-devour">
    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>


<div id="add-burger">
    <div id="input">
        <form class="create-form">
            <div class="form-group">
                <label for="ca">Add a Burger:</label>
                <input type="text" id="burgername" name="name">
            <button type="submit">Submit</button>
            </div>
        </form>

    </div>
</div>